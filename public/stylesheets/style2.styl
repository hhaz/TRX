
/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Store the main color and
 * background color as variables
 */
main-color = #A7C942
background-color = #F2F2F2

h1
 font-family:"Trebuchet MS", Arial, Helvetica, sans-serif
 padding:3px 7px 2px 7px

h2
 font-family:"Trebuchet MS", Arial, Helvetica, sans-serif
 padding:3px 7px 2px 7px

li
  border:0
  margin:0
  padding: 0px 0px 0px 10px

ul
  border:0
  margin:0
  padding:0

table
 width 100%
 overflow-y auto

table,th,td
 border 1px solid black
 border-collapse collapse

th, td 
    padding 5px
    text-align left

table#t01 tr:nth-child(even) 
    background-color #eee

table#t01 tr:nth-child(odd) 
   background-color #fff

table#t01 th  
    background-color black
    color white

textarea
    border:1px solid #999999
    width:95%
    margin:5px 0
    padding:3px

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 5px 5px
  color #fff
  font-size 10px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.created_at
 font-size 12px

.contentTitle
  margin -10px 10px 10px 10px
  color #A7C942

.leftContainer
  width 240px
  height 800px
  font-size:12px
  float left
  margin 5px auto
  background-color #FAFAFA
  overflow hidden
  border-radius 3px
  border 1px solid #ccc

.container
  width 800px
  height 400px
  font-size:12px
  float left
  margin 5px 0px 0px 10px
  background-color #FAFAFA
  border-radius 3px
  border 1px solid #ccc
  overflow auto

.bottom
  width 800px
  height 200px
  font-size:12px
  float left
  margin 5px 0px 0px 10px
  background-color #FAFAFA
  border-radius 3px
  border 1px solid #ccc
  overflow auto

.contentBody
  float left
  background-color #FFFFFF
  border-radius 3px
  border 1px solid #ccc
  width 780px
  margin -10px 10px 10px 10px
    
